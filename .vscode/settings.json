{
  "angular-schematics.schematicsDefaultOptions": {
    "angular-*": {
      "externalTemplate": true,
      "skipStyle": true
    }
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "never"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.preferences.importModuleSpecifier": "shortest",

  "i18n-ally.localesPaths": ["src/app/**/i18n", "src/app/**/**/i18n"],
  "i18n-ally.enabledFrameworks": ["i18next", "ngx-translate"],
  "i18n-ally.pathMatcher": "(?<locale>[\\w-_]+(?<!index)).(?<ext>m?js|ts)",
  "i18n-ally.sourceLanguage": "pt-BR",
  "i18n-ally.displayLanguage": "pt-BR",
  "i18n-ally.keystyle": "nested",
  "i18n-ally.tabStyle": "tab",
  "i18n-ally.sortKeys": true,
  "i18n-ally.keepFulfilled": true,
  "i18n-ally.theme.annotation": "#79b8ff",
  "i18n-ally.theme.annotationBorder": "#c8e1ff",
  "i18n-ally.theme.annotationMissing": "#79b8ff",
  "i18n-ally.theme.annotationMissingBorder": "#f97583",
  "i18n-ally.enabledParsers": ["ts", "js"],
  "i18n-ally.dirStructure": "file",
  "i18n-ally.parsers.typescript.compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,
    "importHelpers": false,
    "module": "commonjs"
  }
}
